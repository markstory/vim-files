{
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.jumpCommand": "tabe",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "python"
  ],

  // Signs
  "diagnostic.errorSign": "\uf467",
  "diagnostic.warningSign": "\uf071",
  "diagnostic.infoSign": "\uf129",
  "diagnostic.hintSign": "â€¢",

  // Python
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "none",

  // Pyright
  "python.pythonPath": "~/.pyenv/shims/python",

  // disable autocomplete and lsp in python and use pyright intead.
  "python.autoUpdateLanguageServer": false,
  "python.jediEnabled": false,
  "python.analysis.diagnosticEnabled": false,

  // Typescript
  "tsserver.enable": true,
  "tsserver.formatOnType": false,

  // eslint
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": false,
  "eslint.format.enable": true,

  // PHP
  "intelephense.environment.phpVersion": "7.4.10",
}
