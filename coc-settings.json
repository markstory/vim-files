{
  "coc.preferences.extensionUpdateCheck": "never",
  "coc.preferences.jumpCommand": "tabe",
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "javascript",
    "javascriptreact",
    "javascript.jsx",
    "typescript",
    "typescript.tsx",
    "typescriptreact",
    "python"
  ],

  // Signs
  "diagnostic.errorSign": "✖︎",
  "diagnostic.warningSign": "⚠",
  "diagnostic.infoSign": "ⓘ",
  "diagnostic.hintSign": "☝",

  // Python
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "none",

  // Pyright
  "python.pythonPath": "~/.pyenv/shims/python",

  // disable autocomplete and lsp in python and use pyright intead.
  "python.autoUpdateLanguageServer": false,
  "python.jediEnabled": false,
  "python.analysis.diagnosticEnabled": false,

  // Typescript
  "tsserver.enable": true,
  "tsserver.formatOnType": false,

  // eslint
  "eslint.enable": true,
  "eslint.run": "onSave",
  "eslint.autoFixOnSave": true,
  "eslint.filetypes": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // PHP
  "intelephense.environment.phpVersion": "7.3.0",
}
